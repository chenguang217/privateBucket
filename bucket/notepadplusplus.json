{
	"version": "7.9.5",
	"description": "A free source code editor and Notepad replacement that supports several languages.",
	"homepage": "https://notepad-plus-plus.org",
	"architecture": {
		"64bit": {
			"url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v7.9.5/npp.7.9.5.portable.x64.zip",
			"hash": "be41ad31f90ff7fa3569b56a2d2cc584ad327a28c9ca239301babd4cd0788cd8"
		},
		"32bit": {
			"url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v7.9.5/npp.7.9.5.portable.zip",
			"hash": "65830c1ee6b91d91aa4f11d885261b29ee7cc8959b9df07947970220eaa8a66a"
		}
	},
	"pre_install": [
		"if (!(Test-Path \"$persist_dir\\session.xml\")) { New-Item \"$dir\\session.xml\" -Force | Out-Null }",
		"if (!(Test-Path \"$persist_dir\\userDefineLang.xml\")) { New-Item \"$dir\\userDefineLang.xml\" -Force | Out-Null }",
		"'Windows Registry Editor Version 5.00' | out-file $dir\\test.reg -encoding ascii",
		"'[HKEY_CLASSES_ROOT\\*\\shell\\NotePad++]' | out-file -append $dir\\test.reg -encoding ascii",
		"'@=\"Edit with NotePad++\"' | out-file -append $dir\\test.reg -encoding ascii",
		"$result = $dir.toString() + \"\\notepad++.exe\" -replace \"\\\\\", \"\\\\\"",
		"'\"Icon\"=\"' + $result + '\"' | out-file -append $dir\\test.reg -encoding ascii",
		"'[HKEY_CLASSES_ROOT\\*\\shell\\NotePad++\\Command]' | out-file -append $dir\\test.reg -encoding ascii",
		"'@=\"\\\"' + $result + '\\\" \\\"%1\\\"\"' | out-file -append $dir\\test.reg -encoding ascii",
		"Start-Process powershell \"$dir\\test.reg\" -Verb RunAs"
	],
	"uninstaller": {
		"script": [
			"Start-Process powershell \"reg delete HKEY_CLASSES_ROOT\\*\\shell\\NotePad++ /f\" -Verb RunAs"
		]
	},
	"bin": "notepad++.exe",
	"shortcuts": [
		[
			"notepad++.exe",
			"Notepad++"
		]
	],
	"persist": [
		"backup",
		"cloud",
		"plugins",
		"themes",
		"userDefineLangs",
		"config.xml",
		"session.xml",
		"userDefineLang.xml"
	]
}