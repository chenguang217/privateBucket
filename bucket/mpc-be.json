	"pre_install": [
		"@('mpc-be64.ini', 'mpc-be.ini', 'Default.mpcpl', 'history.mpc_lst') | ForEach-Object {",
		"    if (!(Test-Path \"$persist_dir\\$_\")) { New-Item \"$dir\\$_\" | Out-Null }",
		"}",
		"Start-Process powershell \"regsvr32.exe $dir\\MpcVideoRenderer64.ax /s\" -Verb RunAs -WindowStyle hidden -wait",
		"Start-Process cmd -Args '/c', \"for /f `\"usebackq`\" %s in (``scoop list ^| grep dmitrirender5``) do xcopy /D $scoopdir\\apps\\dmitrirender5\\version64\\version.dll $dir\\version.dll && pause\" -wait -WindowStyle hidden"
	],
	"uninstaller": {
