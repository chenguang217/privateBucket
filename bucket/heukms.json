{
	"version": "5.0.0",
	"description": "a KMS activator",
	"homepage": "https://github.com/zbezj/HEU_KMS_Activator",
	"url": "https://hub.gitfast.tk/zbezj/HEU_KMS_Activator/releases/download/25.0.0/HEU_KMS_Activator_v25.0.0_.HEU168.zip",
	"hash": "md5:8bde47de50290a4dd866f288cc9bb6fd",
	"pre_install": [
		"7z x $dir\\HEU_KMS_Activator_v25.0.0_.HEU168.zip -pHEU168 -o $dir",
		"Start-Process powershell \"Set-MpPreference -DisableRealtimeMonitoring 1;Add-MpPreference -ExclusionPath $dir\\HEU_KMS_Activator_v25.0.0.exe;Set-MpPreference -DisableRealtimeMonitoring 0\" -Verb RunAs -WindowStyle hidden",
		"'Start-Process powershell \"Set-MpPreference -DisableRealtimeMonitoring 1;Start-Process ' + $dir + '\\HEU_KMS_Activator_v25.0.0.exe;Start-Sleep 30;Set-MpPreference -DisableRealtimeMonitoring 0;\" -Verb RunAs -WindowStyle Hidden' | out-file $dir/test.ps1 -encoding ascii",
		"'@set Path=%Path%;%SystemRoot%\\system32\\WindowsPowerShell\\v1.0\\ & powershell -ExecutionPolicy Unrestricted -NoProfile %~dpn0.ps1 -Verb RunAs -WindowStyle Hidden' | out-file $dir/test.cmd -encoding ascii"
	],
	"shortcuts": [
		[
			"test.cmd",
			"HEU_KMS_Activator",
			"",
			"HEU_KMS_Activator_v25.0.0.exe"
		]
	],
	"uninstaller": {
		"script": [
			"Start-Process powershell \"Remove-MpPreference -ExclusionPath $dir\\HEU_KMS_Activator_v25.0.0.exe\" -Verb RunAs -WindowStyle hidden"
		]
	}
}
